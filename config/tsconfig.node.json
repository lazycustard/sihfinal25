{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"types": ["node"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowImportingTsExtensions": false,
		"isolatedModules": true,
		"moduleDetection": "auto",
		"noEmit": true,
		"strict": true
	},
	"include": ["vite.config.ts"]
}
